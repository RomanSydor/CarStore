<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="stylesheet" href="../../Content/ViewsCSS/_Layout.css" />
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan+2|Barlow+Condensed:400,700|Open+Sans:400,700|Oswald:400,700&display=swap&subset=cyrillic-ext" rel="stylesheet">
</head>

<body>

    <header class="header">
        <div class="container-sheet">   
            <div class="header-inner">
                <div>
                    <a class="header-logo" href="/Home/Index">RS STORE</a>
                </div>

                <nav class="navigation">
                    <a class="nav-link" href="/Brand/Index">ALL BRANDS</a>
                    <a class="nav-link" href="/CarModel/Index/1">RENAULT</a>
                    <a class="nav-link" href="/CarModel/Index/2">AUDI</a>
                    <a class="nav-link" href="/Purchase/Create">Purchase</a>
                    <a class="nav-link" href="/Home/Contact">(C)</a>
                    <a class="nav-link" href="/Home/About">(A)</a>
                </nav>
            </div>
        </div>
    </header>


    <div class="container-sheet">
        @RenderBody()
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - RSCarStore. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>