@using CarStore.Models
@model CarStore.Models.CarModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
    <link type="text/css" rel="stylesheet" href="../../Content/ViewsCSS/CarModelDetails.css" />
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan+2|Barlow+Condensed:400,700|Open+Sans:400,700|Oswald:400,700&display=swap&subset=cyrillic-ext" rel="stylesheet">
</head>

<body>
    <div class="div">
        <h1>Details</h1>
        <a href="/Config/Index/@Model.Id">
            <h1>Configurate your car!</h1>
        </a>
    </div>
    <hr />
    <h2>@Model.Name</h2>
    @if (Model.Id == 1)
    {


        <span>
            Start price from $14 200
            <br />
        </span>

        <img src="~/App_Images/renault-megane-view.jpg" alt="Megan view" />


        <hr />
        <div>
            <h2>Interior design</h2>
            <img src="~/App_Images/renault-megane-inside-1.jpg" alt="Megane inside 1" />
            <hr />
            <span>
                Appreciate its impeccable finish
                <br>
                Digital speedometer, ergonomic center console, large 8.7-inch comfortable vertical touch screen * and more. In the interior of the new Renault MEGANE Sedan you are at the center of the event.
                <br>
                * Depending on version
                <br>
            </span>
            <hr />
            <img src="~/App_Images/renault-megane-inside-2.jpg" alt="Megane inside 2" />
            <hr />
            <h2>Configurations</h2>
            <a href="/Config/Details/1">
                <img class="config-img" src="#" alt="Megane configs life img" />
            </a>
            <a href="/Config/Details/3">
                <img class="config-img" src="#" alt="Megane configs zen img" />
            </a>
            <a href="/Config/Details/4">
                <img class="config-img" src="#" alt="Megane configs intanse img" />
            </a>
            <hr />

        </div>

    }

    @if (Model.Id == 2)
    {

        <span>
            Start price from $12 400
            <br />
        </span>

        <img src="~/App_Images/renault-duster-view.jpg" alt="Duster view" />


        <hr />
        <div>
            <h2>Interior design</h2>
            <img src="~/App_Images/renault-duster-inside-2.jpg" alt="Duster inside 1" />
            <hr />
            <span>
                The dynamic design of the all-new Duster will simply astound you.
                <br>
                All this thanks to a completely updated body, stylish rails and a grille.
                <br>
            </span>
            <hr />
            <img src="~/App_Images/renault-duster-inside-1.jpg" alt="Duster inside 2" />
        </div>
        <hr />
        <h2>Configurations</h2>
        <a href="/Config/Details/5">
            <img class="config-img" src="#" alt="Duster configs life img" />
        </a>
        <a href="/Config/Details/6">
            <img class="config-img" src="#" alt="Duster configs zen img" />
        </a>
        <a href="/Config/Details/7">
            <img class="config-img" src="#" alt="Duster configs intanse img" />
        </a>
        <hr />

    }

    @if (Model.Id == 3)
    {

    }

    @if (Model.Id == 4)
    {

    }

    @if (Model.Id == 1 || Model.Id == 2)
    {
        <p>
            <a class="back-link" href="/CarModel/Index/1">Back to list</a>
        </p>
    }

    @if (Model.Id == 3 || Model.Id == 4)
    {
        <p>
            <a class="back-link" href="/CarModel/Index/2">Back to list</a>
        </p>
    }
</body>        