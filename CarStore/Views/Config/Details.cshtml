    @if (Model.Id == 13)
    {
        <img class="img" src="~/App_Images/audi-RS-7-cfg-premium.png" alt="config rs7 premium img" />
    }
    @if (Model.Id == 14)
    {
        <img class="img" src="~/App_Images/audi-Q-7-cfg-premium.png" alt="config q7 premium img" />
    }
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Name):
