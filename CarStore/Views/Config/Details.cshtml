    @if (Model.Id == 9)
    {
        <img class="img" src="~/App_Images/audi-Q-7-cfg-base.png" alt="config q7 base img" />
    }
    @if (Model.Id == 10)
    {
        <img class="img" src="~/App_Images/audi-RS-7-cfg-comfort.png" alt="config rs7 comfort img" />
    }
    @if (Model.Id == 12)
    {
        <img class="img" src="~/App_Images/audi-Q-7-cfg-comfort.png" alt="config q7 comfort img" />
