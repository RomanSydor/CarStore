@using CarStore.Models
@model IEnumerable<CarStore.Models.CarColor>

@{
    ViewBag.Title = "COLORS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />
    <link type="text/css" rel="stylesheet" href="../../Content/ViewsCSS/CarColorIndex.css" />
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan+2|Barlow+Condensed:400,700|Open+Sans:400,700|Oswald:400,700&display=swap&subset=cyrillic-ext" rel="stylesheet">
</head>

<body>

    <h2>Colors list</h2>

    <table class="table-cc">

        @foreach (var item in Model)
        {

        <tr class="tr-cc">
            <td class="td-cc">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="td-cc">
               $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="td-cc">
                <a href="/PurchaseBuild/CarColorChoose/@item.Id">Choose</a>
            </td>
        </tr>
        }
    </table>

</body>